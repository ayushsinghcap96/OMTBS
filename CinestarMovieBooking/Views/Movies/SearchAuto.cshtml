@model CinestarEntities.MovyEntity

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script type="text/javascript">

   
    </script>
    <meta name="viewport" content="width=device-width" />
    <title>SearchAuto</title>
</head>
<body>

    @using (Html.BeginForm("SearchAuto", "Movies"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <br />

            <label class="text-center" style=" font-size:large">Search a movie:</label>
            <div class="form-group">
                <br />
                <div class="col-md-12">
                    @Html.EditorFor(model => model.MovieName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Search" } })

                </div>
            </div>



        </div>
    }
    <hr />
    <label class="text-center" style=" font-size:large">Filter movies:</label>
    @using (Html.BeginForm("FilterResult", "Movies"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <br />
            <div class="form-group">
                <div class="col-md-10">
                    @Html.DropDownListFor(x => Model.GenreId, new SelectList(ViewBag.generList, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "Country" })
                    @Html.ValidationMessageFor(model => model.GenreId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.DropDownListFor(x => Model.LanguageId, new SelectList(ViewBag.langList, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "Country" })
                    @Html.ValidationMessageFor(model => model.LanguageId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" class="btn-primary" style="padding:10px;border-radius:10px" value="Filter" />
                </div>
            </div>

        </div>
    }

</body>
</html>

